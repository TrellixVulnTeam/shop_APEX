
<%= form_for @painting do |f| %>
   
   <div class="form-group">
     <%= f.label :name %><br />
     <%= f.text_field :name, :class => 'form-control' %>
   </div>
   <div class="form-group">
     <%= f.file_field :image %>
   </div>
   <div class="form-group">
     <%= f.label :review %><br />
     <%= f.text_area :review, :class => 'form-control' %>
   </div>
   <div class="form-group">
     <%= f.submit %>
   </div>
<% end %>
