
<%= form_for @painting do |f| %>
   
   <div class="field">
     <%= f.label :name %><br />
     <%= f.text_field :name %>
   </div>
   <div class="field">
     <%= f.file_field :image %>
   </div>
   <div class="field">
     <%= f.label :review %><br />
     <%= f.text_area :review %>
   </div>
   <div class="actions">
     <%= f.submit %>
   </div>
<% end %>
